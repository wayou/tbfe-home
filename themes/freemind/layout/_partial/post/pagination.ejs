<div class="pagination">
<ul class="pagination">
	 <% if (page.prev || page.next) { %>
		<% if (page.prev){ %>		
    	<li class="prev"><a href="<%- config.root %><%- page.prev.path %>" class="alignleft prev"><i class="fa fa-chevron-left"></i><%= __('prev') %></a></li>
  		<% } else { %>
          <li class="prev disabled"><a><i class="fa fa-chevron-left"></i><%= __('prev') %></a></li>
        <% } %>

        <li><a href="<%- config.root %><%- theme.menu[0].url %>"><i class="fa fa-home"></i><%= __('home') %></a></li>

		<% if (page.next){ %>
		   <li class="next"><a href="<%- config.root %><%- page.next.path %>" class="alignright next"><%= __('next') %><i class="fa fa-chevron-right"></i></a></li>         
        <% } else { %>
          <li class="next disabled"><a><%= __('next') %><i class="fa fa-chevron-right"></i></a></li>
        <% } %>
	<% }  %>
</ul>
</div>
